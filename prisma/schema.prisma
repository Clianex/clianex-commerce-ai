// ============================
// GENERATOR
// ============================
generator client {
  provider = "prisma-client-js"
}

// ============================
// DATASOURCE
// ============================
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================
// ENUMS
// ============================
enum UserRole {
  OWNER
  ADMIN
  USER
}

// ============================
// MODELS
// ============================

model Module {
  id          String  @id @default(cuid())
  key         String  @unique
  name        String
  description String?
  icon        String?
  price       Int     @default(0)
  active      Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users UserModule[]
}

model UserModule {
  id          String  @id @default(cuid())
  clerkUserId String
  moduleId    String
  enabled     Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  module Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  @@unique([clerkUserId, moduleId])
  @@index([clerkUserId])
}

model UserRoleAssignment {
  id          String   @id @default(cuid())
  clerkUserId String
  role        UserRole @default(USER)

  createdAt DateTime @default(now())

  @@unique([clerkUserId])
  @@index([role])
}
